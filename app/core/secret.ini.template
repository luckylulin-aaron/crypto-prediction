[CONFIG]
# Coinbase API credentials
COINBASE_API_KEY = "your_actual_api_key_here"
COINBASE_API_SECRET = "your_actual_api_secret_here"

# Binance API credentials
BINANCE_API_KEY = "your_binance_api_key_here"
