# Gmail credentials for notifications
GMAIL_ADDRESS = "your_gmail@gmail.com"
GMAIL_APP_PASSWORD = "your_gmail_app_password"
GMAIL_RECIPIENTS = "your_gmail@gmail.com,another_email@example.com" 

# DEFI event client email credentials
# Comma-separated list of recipients
DEFI_REPORT_TO_EMAILS = "your_gmail@gmail.com,another_email@example.com"
DEFI_REPORT_FROM_EMAIL = "your_gmail@gmail.com"
